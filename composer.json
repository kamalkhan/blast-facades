{
  "name": "blast/facades",
  "description": "Minimize complexity and represent dependencies as generic facades.",
  "keywords": [
    "blast",
    "facades",
    "dependency",
    "injection",
    "di"
  ],
  "homepage": "https://github.com/thephpleague/container",
  "license": "MIT",
  "authors": [
    {
      "name": "Marco Bunge",
      "email": "mjls@web.de",
      "homepage": "http://www.marco-bunge.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "container-interop/container-interop": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.*",
    "league/container": "~2.0",
    "squizlabs/php_codesniffer": "2.*"
  },
  "provide": {
      "container-interop/container-interop-implementation": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "Blast\\Facades\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Blast\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": [
      "cd vendor/phpunit/phpunit",
      "phpunit --configuration phpunit.xml"
    ],
    "phpcs": [
      "cd vendor/squizlabs/php_codesniffer/scripts",
      "phpcs ./src --colors --encoding=UTF-8 --extensions=php --standard=PSR2"
    ]
  },

  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  }
}
